<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_middle"
    android:orientation="vertical" >

    <com.abstracttech.ichiban.views.FPStextView
        android:id="@+id/FPStextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="fps meter" />

    <com.abstracttech.ichiban.views.PowerButton
        android:id="@+id/powerButton1"
        android:layout_width="284dp"
        android:layout_height="257dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/power_red"
        android:clickable="true"
        android:onClick="powerButtonClick" />

    <com.abstracttech.ichiban.views.DirectionWheel
        android:id="@+id/directionWheel1"
        android:layout_width="280dp"
        android:layout_height="255dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/powerButton1"
        android:layout_marginRight="40dp"
        android:background="@drawable/volan" />
	
</RelativeLayout>